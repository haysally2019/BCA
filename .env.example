# ==================================================
# Blue Collar Academy Sales Portal - Environment Variables
# ==================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!
# ==================================================

# --------------------------------------------------
# Supabase Configuration (REQUIRED)
# --------------------------------------------------
# Your Supabase project URL
# Find at: https://app.supabase.com/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase Anonymous/Public Key
# Find at: https://app.supabase.com/project/YOUR_PROJECT/settings/api
# This is safe to expose in the browser
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# --------------------------------------------------
# AffiliateWP Integration (OPTIONAL)
# --------------------------------------------------
# WordPress site URL where AffiliateWP is installed
# Example: https://your-wordpress-site.com
AFFILIATEWP_SITE_URL=https://your-wordpress-site.com

# AffiliateWP REST API credentials
# Generate at: WordPress Admin → Affiliates → Tools → API Keys
AFFILIATEWP_API_PUBLIC_KEY=your_api_public_key
AFFILIATEWP_API_TOKEN=your_api_token

# Secret key for webhook signature verification
# Configure in AffiliateWP Settings → Webhooks
# Leave blank if not using affiliate integration
AFFILIATEWP_WEBHOOK_SECRET=your_webhook_secret_key

# Default commission rates for new affiliates (percentage)
AFFILIATEWP_DEFAULT_UPFRONT_RATE=15
AFFILIATEWP_DEFAULT_RESIDUAL_RATE=10

# --------------------------------------------------
# Facebook Integration (OPTIONAL)
# --------------------------------------------------
# Facebook App ID for lead generation integration
# Find at: https://developers.facebook.com/apps
# Leave blank if not using Facebook lead ads
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# --------------------------------------------------
# Application Configuration (OPTIONAL)
# --------------------------------------------------
# Override the default application URL if needed
# Defaults to Supabase URL if not specified
# SITE_URL=https://your-custom-domain.com